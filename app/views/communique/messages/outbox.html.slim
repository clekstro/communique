table.table.table-hover.table-condensed role="presentation"
  = render :partial => 'communique/messages/partials/recipient_based_headings'
  tbody
    - if @messages.size > 0
      - for message in @messages
        = render :partial => 'communique/messages/partials/single_sent_message', locals: { message: message }
    - else
      = render :partial => 'communique/message/partials/no_messages_notice'
